# JARO Configuration - Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ===================================
# Server Configuration
# ===================================
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# ===================================
# Timeouts
# ===================================
REQUEST_TIMEOUT=30s
IDLE_TIMEOUT=60s

# ===================================
# Request Limits
# ===================================
MAX_BODY_SIZE=10485760      # 10MB in bytes
MAX_FILE_SIZE=52428800      # 50MB in bytes

# ===================================
# Security
# ===================================
# Comma-separated list of allowed MIME types
ALLOWED_MIMES=application/json,application/pdf,text/plain,image/png,image/jpeg

# ===================================
# Logging
# ===================================
LOG_LEVEL=info              # Options: debug, info, warn, error

# ===================================
# Feature Flags
# ===================================
ENABLE_METRICS=false        # Enable Prometheus metrics endpoint

# ===================================
# LLM Configuration (Phase 3)
# ===================================
# OpenAI Configuration
OPENAI_API_KEY=sk-proj-XXXXXXXXXXXXXXXXXXXXXXXXXXXXX
DEFAULT_LLM_MODEL=gpt-4o-mini

# Anthropic Configuration (Alternative)
ANTHROPIC_API_KEY=sk-ant-XXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# LLM Settings
LLM_TIMEOUT=60s            # Maximum wait time for LLM response
LLM_MAX_RETRIES=3          # Number of retry attempts on failure

# ===================================
# Future Configuration Placeholders
# ===================================
# DATABASE_URL=postgresql://user:pass@localhost:5432/jaro
# REDIS_URL=redis://localhost:6379
# JWT_SECRET=your-secret-key-here
# RATE_LIMIT_PER_MINUTE=60
